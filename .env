# ============================================
# PricePulse Mobile App Environment Variables
# ============================================
# Note: All variables must be prefixed with EXPO_PUBLIC_ to be accessible

# API Configuration
EXPO_PUBLIC_API_URL=http://localhost:3000
# For production, use your backend URL:
# EXPO_PUBLIC_API_URL=https://api.pricepulse.ai
# For physical device testing, use your computer's IP:
# EXPO_PUBLIC_API_URL=http://192.168.1.100:3000

EXPO_PUBLIC_API_TIMEOUT=10000

# Google OAuth Configuration (Optional)
# Web Client ID (for web platform)
EXPO_PUBLIC_GOOGLE_CLIENT_ID=your-google-web-client-id
EXPO_PUBLIC_GOOGLE_WEB_CLIENT_ID=your-google-web-client-id

# iOS Client ID
EXPO_PUBLIC_GOOGLE_IOS_CLIENT_ID=your-google-ios-client-id

# Android Client ID
EXPO_PUBLIC_GOOGLE_ANDROID_CLIENT_ID=your-google-android-client-id

# App Configuration
EXPO_PUBLIC_ENVIRONMENT=development
# Options: development, staging, production

# Debug Mode
EXPO_PUBLIC_DEBUG=false
